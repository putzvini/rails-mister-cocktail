<div class="container m-4">
  <div>
    <h5><%= @cocktail.name %></h5>
    <ul>
      <% @cocktail.doses.each do |dose| %>
        <li>
          <%= dose.description %> of 
          <%= dose.ingredient.name %> | 
          <%= link_to "delete",
            dose_path(dose),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
        </li>
      <% end %>
    </ul>
  </div>
  <%= link_to "+ dose", new_cocktail_dose_path(@cocktail), class:"btn btn-outline-primary" %>
  <div class="container mt-4">
    <%= link_to "back to cocktails", root_path %>
</div>
</div>